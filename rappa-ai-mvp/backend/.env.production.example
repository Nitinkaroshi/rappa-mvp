# Environment
ENVIRONMENT=production
DEBUG=false

# Database
DATABASE_URL=postgresql://user:password@host:5432/rappa_db

# Redis
REDIS_URL=redis://redis:6379/0

# JWT
JWT_SECRET_KEY=GENERATE_STRONG_64_CHAR_SECRET_HERE
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Email (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Rappa.AI
FRONTEND_URL=https://yourdomain.com

# AWS S3 (or Backblaze B2)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-005
S3_ENDPOINT_URL=https://s3.us-east-005.backblazeb2.com

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# File Upload
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=["pdf","jpg","jpeg","png","tif","tiff"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Tesseract OCR
TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_LANG=eng+kan
TESSERACT_OEM=1
TESSERACT_PSM=6

# Poppler PDF Conversion
POPPLER_PATH=/usr/bin
POPPLER_DPI=300
TARGET_IMAGE_WIDTH=2000

# OCR Processing
USE_EMBEDDED_OCR=false
ENABLE_OCR_MULTIPROCESSING=true
OCR_PAGE_WORKERS=2
MAX_OCR_PAGES=25

# LLM Backend
LLM_BACKEND=gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-70b-versatile

# Validation Thresholds
MIN_REGISTRATION_FEE=4000.0
MAX_MISC_FEE=3000.0

# Security
ALLOWED_ORIGINS=["https://yourdomain.com"]
