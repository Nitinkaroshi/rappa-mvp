# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/rappa_db

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# AWS S3 (or Backblaze B2)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_BUCKET_NAME=rappa-documents
AWS_REGION=us-east-1
S3_ENDPOINT_URL=https://s3.us-east-1.backblazeb2.com

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Upload
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=["pdf","jpg","jpeg","png"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# ============ V1 Legacy OCR Configuration ============

# Tesseract OCR
TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_LANG=eng+kan
TESSERACT_OEM=1
TESSERACT_PSM=4

# Poppler PDF Conversion
# POPPLER_PATH=/usr/bin/  # Optional: For custom Linux installations
POPPLER_DPI=300
TARGET_IMAGE_WIDTH=2000

# YOLO Table Detection
YOLO_MODEL_PATH=v1_legacy/models/table1.19.1.onnx
YOLO_CONF_THRESHOLD=0.88

# OCR Processing
USE_EMBEDDED_OCR=false
ENABLE_OCR_MULTIPROCESSING=true
OCR_PAGE_WORKERS=1
MAX_OCR_PAGES=25

# LLM Backend (gemini, groq, ollama, llamacpp, vllm)
LLM_BACKEND=gemini
GEMINI_API_KEY=AIzaSyD7ijMiQ2B5xpyc_c2Tf_edmB-HQBv6rNI
GEMINI_MODEL=gemini-2.0-flash-exp
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-70b-versatile

# Validation Thresholds
MIN_REGISTRATION_FEE=4000.0
MAX_MISC_FEE=3000.0
